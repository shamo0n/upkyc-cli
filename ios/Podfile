platform :ios, '16.0'

require_relative '../node_modules/react-native/scripts/react_native_pods'

use_modular_headers!

target 'Upkyc' do
  config = use_native_modules!

  use_react_native!(
    :path => '../node_modules/react-native',
    :hermes_enabled => true,
    :fabric_enabled => false
  )

  post_install do |installer|
    react_native_post_install(installer)

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Remove -Werror to avoid build failure
        config.build_settings['WARNING_CFLAGS'] = ''
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS'].to_s.gsub('-Werror', '')
        config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS'].to_s.gsub('-Werror', '')
      end
    end
  end
end
